<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_margin="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_border5"
        android:layout_margin="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/close_medicine_list"
            android:layout_width="10dp"
            android:layout_height="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.001"
            app:layout_constraintHorizontal_bias="0.999"
            android:src="@drawable/close" />

        <ImageView
            android:id="@+id/iv_medicine_list"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toBottomOf="@+id/close_medicine_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintHorizontal_bias="0.02"
            android:src="@drawable/pill" />

        <TextView
            android:id="@+id/medicine_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintLeft_toRightOf="@+id/iv_medicine_list"
            android:layout_marginStart="15dp"
            android:text="약 이름"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_normal"/>

        <TextView
            android:id="@+id/medicine_list_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintLeft_toRightOf="@+id/medicine_list_name"
            app:layout_constraintRight_toLeftOf="@+id/alarm_medicine_list"
            android:text="period"
            android:textSize="16sp"
            android:fontFamily="@font/font_normal"/>

        <ImageView
            android:id="@+id/alarm_medicine_list"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.75"
            android:src="@drawable/alarm_on" />

        <ImageView
            android:id="@+id/check_medicine_list"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintTop_toTopOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.95"
            android:src="@drawable/check_x" />

        <TextView
            android:id="@+id/medicine_list_time1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/medicine_list_time2"
            android:layout_marginStart="15dp"
            android:text="time1"
            android:textSize="16sp"
            android:fontFamily="@font/font_normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/medicine_list_time2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/medicine_list_time1"
            app:layout_constraintRight_toLeftOf="@id/medicine_list_time3"
            android:layout_marginStart="15dp"
            android:text="time2"
            android:textSize="16sp"
            android:fontFamily="@font/font_normal"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/medicine_list_time3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/iv_medicine_list"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/medicine_list_time2"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginStart="15dp"
            android:text="time3"
            android:textSize="16sp"
            android:fontFamily="@font/font_normal"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>