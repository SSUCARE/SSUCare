<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/tab_color"
    android:weightSum="10"
    tools:context="com.ssu.takecare.UI.FirstActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bar_match"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/actionbar_color"
        android:orientation="vertical"
        android:layout_weight="1">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/actionbar_color"
            android:src="@drawable/previous_white"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/back_btn"/>

        <TextView
            android:id="@+id/share_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_normal"
            android:text="공유하기"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/image_share"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="#59FFFFFF"
        android:layout_weight="7"
        android:src="@drawable/first_image_edit"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="오늘의 건강정보 레포드 공유"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/font_normal"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/share_pressure"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="혈압"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font_normal"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/share_sugar"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="혈당"
        android:textSize="20sp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/font_normal"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/share_weight"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="체중"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/font_normal"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>