<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:id="@+id/pageview_img0"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="bottom">

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/pageview_img2"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:id="@+id/pageview_img1"
            android:src="@drawable/pageview_circle"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:layout_constraintTop_toTopOf="@id/pageview_img1"
            app:layout_constraintLeft_toRightOf="@id/pageview_img1"
            app:layout_constraintRight_toLeftOf="@id/pageview_img3"
            android:id="@+id/pageview_img2"
            android:src="@drawable/pageview_circle"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:layout_constraintTop_toTopOf="@id/pageview_img1"
            app:layout_constraintLeft_toRightOf="@id/pageview_img2"
            app:layout_constraintRight_toLeftOf="@id/pageview_img4"
            android:id="@+id/pageview_img3"
            android:src="@drawable/pageview_circle"/>

        <ImageView
            android:layout_width="11dp"
            android:layout_height="11dp"
            app:layout_constraintTop_toTopOf="@id/pageview_img1"
            app:layout_constraintLeft_toRightOf="@id/pageview_img3"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/pageview_img4"
            android:src="@drawable/pageview_circle"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>