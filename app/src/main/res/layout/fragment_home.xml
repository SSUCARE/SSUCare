<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tab_color"
    android:weightSum="13"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/actionbar_color"
        android:layout_weight="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:fontFamily="@font/font_merienda_bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카드뉴스"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_normal"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:scaleType="fitXY"
            android:src="@drawable/card_news" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="__월 __일 __요일"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_normal"
            android:id="@+id/tv_date"
            android:layout_marginBottom="10dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_border1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_pressure"
                android:text="혈압"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/high_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_pressure"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="____"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/bar_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_pressure"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/high_pressure"
                android:text=" / "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/low_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_pressure"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bar_pressure"
                android:text="____"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/unit_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_pressure"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/low_pressure"
                android:text=" mmHg"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <Button
                android:id="@+id/btn_pressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="입력"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"
                android:onClick="inputPressure"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_border1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_sugar"
                android:text="혈당"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/before_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_sugar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="____"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/bar_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_sugar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/before_sugar"
                android:text=" / "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/after_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_sugar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/bar_sugar"
                android:text="____"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/unit_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_sugar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/after_sugar"
                android:text=" mg/dL"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <Button
                android:id="@+id/btn_sugar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="입력"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"
                android:onClick="inputSugar"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:background="@drawable/layout_border1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.2"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv_weight"
                android:text="체중"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_weight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="____"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <TextView
                android:id="@+id/unit_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tv_weight"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/weight"
                android:text=" kg"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"/>

            <Button
                android:id="@+id/btn_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/gray"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:text="입력"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/font_normal"
                android:onClick="inputWeight"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Button
            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/gray"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:text="리포트 작성"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:fontFamily="@font/font_normal"/>

    </LinearLayout>

</LinearLayout>