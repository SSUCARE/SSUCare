<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TakeCare" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- No Title Bar-->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/actionbar_color</item>
        <item name="colorPrimaryDark">@color/statusbar_color</item>
        <item name="colorAccent">@color/white</item>
        <!-- 날짜 선택 피커. -->
        <item name="android:datePickerDialogTheme">@style/DialogDatePicker.Theme</item>
        <!-- 시간 선택 피커. -->
        <item name="android:timePickerDialogTheme">@style/DialogDatePicker.Theme</item>
    </style>

    <!-- 앱 사용설명서 -->
    <style name="Theme.TakeCare.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 달력 날짜 설정 -->
    <style name="DialogDatePicker.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/actionbar_color</item>
        <item name="android:textColor">#171717</item>
        <item name="android:textColorPrimary">#171717</item>
    </style>

    <!-- Alert Dialog 설정 -->
    <style name="MyDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/NeutralButtonStyle</item>
    </style>

    <style name="NeutralButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/statusbar_color</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/statusbar_color</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/statusbar_color</item>
    </style>
</resources>