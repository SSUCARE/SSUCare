<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ssu.takecare">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.ssu.takecare.ApplicationClass"
        android:allowBackup="true"
        android:fullBackupContent="@xml/backup_rules"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:usesCleartextTraffic="true"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_main"
        android:roundIcon="@mipmap/ic_main_round"
        android:theme="@style/Theme.TakeCare">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_path" />
        </provider>

        <activity android:name="com.ssu.takecare.UI.PasswordActivity" />
        <activity android:name="com.ssu.takecare.UI.MatchActivity" />
        <activity android:name="com.ssu.takecare.UI.CalendarActivity" />
        <activity android:name="com.ssu.takecare.UI.PrescriptionActivity" />
        <activity android:name="com.ssu.takecare.UI.ProfileActivity" />
        <activity android:name="com.ssu.takecare.UI.InfoActivity" />
        <activity android:name="com.ssu.takecare.UI.LoginActivity" />
        <activity android:name="com.ssu.takecare.UI.FindActivity" />
        <activity android:name="com.ssu.takecare.UI.SignupActivity" />
        <activity android:name="com.ssu.takecare.UI.MainActivity" />
        <activity android:name="com.ssu.takecare.UI.ReportActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="com.ssu.takecare.UI.FirstActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>